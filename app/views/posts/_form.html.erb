
<%= form_with(model: post, local: true) do |form| %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br>

  <div class="field">
    <%= form.label :totalloan %>
    <%= form.text_field :totalloan %>
  </div>
<br>

  <div class="field">
    <%= form.label :numofmonthsfullloan %>
    <%= form.text_field :numofmonthsfullloan %>
  </div>
<br>

  <div class="field">
    <%= form.label :interestrate %>
    <%= form.text_field :interestrate %>%
  </div>
<br>

  <div class="field">
    <p>Decimal conversion: <%= @post.decimalconversion%></p>
  </div>
<br>

  <div class="field">
    <p>Monthy payment: <%= number_to_currency(@post.monthlypayment)%></p>
  </div>
<br>

  <p id="">Fraction
  <select id="Fraction" name="post[fraction]">
    <option value="0.08333">1/12</option>
    <option value="0.16667">1/6</option>
    <option value="0.33333">1/3</option>
    <option value="2">Double payment</option>
  </select>
  </p>
<br>

  <div class="actions">
    <%= form.submit %>
  </div>
<br>

  <div class="field">
    <p>Fractional payment: <%= number_to_currency(@post.fractionalpayment)%></p>
  </div>
<br>

  <div class="field">
    <p>Adjusted monthly payment: <%= number_to_currency(@post.adjustedmonthlypayment) %></p>
  </div>
<br>

  <div class="field">
    <p>Full bill amount: <%= number_to_currency(@post.fullbill)%></p>
  </div>
<br>

<!--
  <div class="field">
    <p>You pay: <%= @post.youpay%></p>
  </div>
<br>
-->

  <div class="field">
    <p>Number of months you pay: <%= @post.numofmonthsyoupay%></p>
  </div>
<br>

  <div class="field">
    <p>Number of months for the full loan: <%= @post.numofmonthsfullloan%></p>
  </div>
<br>


<% end %>
