
<%= form_with(model: post, local: true) do |form| %>


  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>
<br>

  <div class="field">
    <%= form.label :totalloan %>
    <%= form.text_field :totalloan %>
  </div>
<br>

  <div class="field">
    <%= form.label :numofmonthsfullloan %>
    <%= form.text_field :numofmonthsfullloan %>
  </div>
<br>

  <div class="field">
    <%= form.label :interestrate %>
    <%= form.text_field :interestrate %>%
  </div>
<br>

<div class="field">
  <p id="">Fraction
  <select id="Fraction" name="post[fraction]">
    <option value="0.08333">1/12</option>
    <option value="0.16667">1/6</option>
    <option value="0.33333">1/3</option>
    <option value="2">Double payment</option>
  </select>
  </p>
  </div>
<br>

<div class="links">
  <div class="actions">
    <%= form.submit %>
  </div>
</div>
<br>

<% end %>
