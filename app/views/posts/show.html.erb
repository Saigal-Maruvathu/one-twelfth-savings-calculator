<div class="text">
  <div>
      <h3><%= @post.title %></h3>
      <p> Created <%= time_ago_in_words(@post.created_at) %> ago</p>
  </div>
  <div class="inputfield">
    <p>Total loan: <%= @post.totalloan%></p>
  </div>
  <div class="inputfield">
    <p>Number of months for full loan: <%= @post.numofmonthsfullloan%></p>
  </div>
  <div class="inputfield">
    <p>Interest rate: <%= @post.interestrate%></p>
  </div>
  <div class="field">
    <p>Decimal conversion: <%= @post.decimalconversion%></p>
  </div>
  <div class="unadjustedfield">
    <p>Monthy payment: <%= number_to_currency(@post.monthlypayment)%></p>
  </div>
  <div class="field">
    <p>Fraction: <%= @post.fraction%> payment</p>
  </div>
  <div class="adjustedfield">
    <p>Fractional payment: <%= number_to_currency(@post.fractionalpayment)%></p>
  </div>
  <div class="adjustedfield">
    <p>Adjusted monthly payment: <%= number_to_currency(@post.adjustedmonthlypayment) %></p>
  </div>
  <div class="unadjustedfield">
    <p>Full bill amount: <%= number_to_currency(@post.fullbill)%></p>
  </div>
  <div class="adjustedfield">
    <p>Number of months you pay: <span id="numOfMonths"><%= @post.numofmonthsyoupay%></span> </p>
  </div>
  <div class="unadjustedfield">
    <p>Number of months for the full loan: <span id="numForFullLoan"><%= @post.numofmonthsfullloan %></span></p>
  </div>

  Months saved:
<div class="bargraph">
  <div id="row1"></div>
  <div id="row2"></div>
</div>

<script type="text/javascript">
  loadSquares();
</script>

<div class="links">
<% if current_user.id == @post.user_id %>
  <%= link_to 'Edit', edit_post_path(@post)%>
  <%= link_to 'Delete', post_path(@post), method: :Delete, data: {confirm: "are you sure??"}%>
<% end %>

<%= link_to 'Back', posts_path %>
</div>
</div>
